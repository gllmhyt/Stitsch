{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

   {{#if tag.feature_image}}
       <header class="big cover" style="background-image: url({{tag.feature_image}})">
   {{else}}
      {{#if @blog.cover_image}}
       <header class="big cover" style="background-image: url({{@blog.cover_image}}">
      {{else}}
       <header class="big cover shrunk default-cover">
      {{/if}}
   {{/if}}
        <h1 style="font-style:italic">{{tag.name}}</h1>
        <div>
        {{#if tag.description}}
            <div class="meta-description">{{tag.description}}</div>
        {{/if}}
            <div class="meta" style="text-align:center">{{plural pagination.total empty="Aucun article" singular="% article" plural="% articles"}}</div>
        </div>
    </header>
                                                
                                                
    <div id="wrapper">
    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}
