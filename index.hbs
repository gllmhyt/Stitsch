{{!< default}}
              
{{#if @blog.cover_image}}
    <header class="big shrunk cover" style="background-image: url({{@blog.cover_image}})">
{{else}}
    <header class="big cover shrunk default-cover">
{{/if}}
        <h1 class="home-head">
            {{#if @blog.logo}}
                <img class="logo" src="{{@blog.logo}}" alt="logo">
            {{/if}}

            {{@blog.title}}
        </h1>
        <div class="meta">
            {{#if @blog.description}}<span class="small">{{@blog.description}}</span>{{/if}}
        </div>
    </header>

    <div id="wrapper">
    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}
