{{!< default}}

{{#post}}

{{#if feature_image}}
    <header class="big cover" style="background-image: url({{img_url feature_image}})">
{{else}}
    <header class="big cover shrunk default-cover">
{{/if}}
    <h1 class="post-title" style="text-align:left">{{title}}</h1>
        <div class="post-meta meta">
            <div>
                {{#author}}
                    <a href="{{url}}">
                        {{#if profile_image}}
                            <div class="author-thumb" style="background-image:url({{img_url profile_image}});" alt="{{name}}'s picture" nopin="nopin"></div>
                        {{else}}
                            <i class="fa fa-user" aria-hidden="true"></i>
                        {{/if}}
                        <span>{{name}}</span>
                    </a>
                {{/author}}
                <span><i class="fa fa-calendar" aria-hidden="true"></i> {{date format="DD MMMM YYYY"}}</span>
                {{#if tags}}
                <span class="tags"><i class="fa fa-tags" aria-hidden="true"></i> {{tags}}</span>
                {{/if}}
            </div>
        </div>
</header>

<div id="wrapper">
<section class="article {{post_class}}">
    <div id="post">
        {{content}}
    </div>
</section>

{{/post}}
